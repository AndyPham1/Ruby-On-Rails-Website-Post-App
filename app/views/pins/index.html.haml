#pins.transitions-enabled
	- @pins.each do |pin|
		.box
			.title
				=link_to pin.title, pin_path(pin)
			.imgg
				=link_to image_tag(pin.pix.url,:class => "imggg") if pin.pix?
			.tx
				%p.tx= pin.description

			.tx2
				= link_to "Upvote", upvote_pin_path(pin), method: :put
				= pin.get_upvotes.size
				= link_to "Downvote",downvote_pin_path(pin), method: :put
				= pin.get_downvotes.size
				- if current_user == pin.user
					=link_to "Edit", edit_pin_path(pin)
					=link_to "Rid", pin_path(pin), method: :delete, data: {confirm: "Are you sure?"}
		